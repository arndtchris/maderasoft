@using MaderaSoft.Areas.GestionModule.Models.ViewModels;
@using Madera.Service;

@model ModuleIndexViewModel

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Gestion des modules
        <small>Modules</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Gestion des modules</a></li>
        <li class="active">Modules</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">

    @Html.actionButton("Ajouter un nouveau module", Parametres.TypeBouton.Creation, Url.Action("EditModal", "Module", new { area = "GestionModule" }).ToString(), "editModal")

    @{
        Html.bootstrapTable(Model.tableauModules);
    }

</section>
<!-- /.content -->