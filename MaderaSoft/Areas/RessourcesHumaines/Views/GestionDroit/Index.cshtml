@using MaderaSoft.Areas.RessourcesHumaines.Models.ViewModels;
@using Madera.Service;
@using MaderaSoft.Models.DTO;
@model GestionDroitViewModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Gestion des groupes utilisateur
        <small>ressources humaines</small>
    </h1>
    <ol class="breadcrumb">
        <li><i class="fa fa-dashboard"></i> @Html.ActionLink(" Gestion des groupes utilisateur", "Index", "GestionDroit", new { area = "RessourcesHumaines" }, false)</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    @Html.Raw(string.Format("<div class=\"row\">"))

    @{ int i = 0;}
    @foreach (DroitDTO droit in Model.lesDroits)
    {
        i++;

        if (i % 2 == 0)
        {
            @Html.Raw("<div class=\"row\">");
        }

            @Html.Raw(string.Format("<div class=\"col-md-6\" id=\"parametrage-droit-{0}\">", droit.id))
                @Html.Partial("~/Areas/RessourcesHumaines/Views/GestionDroit/_ParametreDroitPartial.cshtml", droit)
            @Html.Raw(string.Format("</div>"))

        if (i % 2 == 0)
        {
            @Html.Raw("</div>")
        }

    }

    @if (i % 2 != 0)
    {
        @Html.Raw("</div>")
    }


</section>
<!-- /.content -->


