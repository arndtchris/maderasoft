@using MaderaSoft.Areas.GestionStock.Models.ViewModels;
@using Madera.Service;

@model FournisseurIndexViewModel

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Gestion des stocks
        <small>Fournisseurs</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Gestion des stocks</a></li>
        <li class="active">Fournisseurs</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    @if (DroitHelper.Droit.utilisateurPeutCreerSurCeService())
    { 
         @Html.actionButton("Ajouter un nouveau fournisseur", Parametres.TypeBouton.Creation, Url.Action("EditModal", "Fournisseur", new { area = "GestionStock" }).ToString(), "editModal")
    }
   
    @{
        Html.bootstrapTable(Model.tableauFournisseurs);
    }
        

</section>
<!-- /.content -->
