
@using MaderaSoft.Models
@model MaderaSoft.Models.Bootstrap.BootstrapTableModel
    
<table class="table table-hover">
    <thead>
    <tr>
        @for (int i = 0; i < Model.lesLignes[0].Count; i++)
        {
            @Html.Raw(String.Format("<th>" + Model.lesLignes[0][i] + "</th>"));
        }
    </tr>
    </thead>
    <tbody>

    @{
        int nbColonne = Model.lesLignes[0].Count;

        if (Model.avecActionCrud)
        {
            nbColonne -= 1;
        }

    }
    @for (int j = 1; j < Model.lesLignes.Count; j++)
    {
        @Html.Raw("<tr>");
        for (int k = 0; k < nbColonne; k++)
        {
            @Html.Raw(String.Format("<td class=\"table-text\">" + Model.lesLignes[j][k]) + "</td>");
        }

        if (Model.avecActionCrud)
        {
            @Html.Raw("<td class=\"table-text\">");
            @Html.Raw(String.Format("<a class=\"editModal btn btn-warning fa fa-pencil\" href=" + @Url.Action("EditModal", Model.typeObjet, new { id = Model.lesLignes[j][nbColonne] }) + "> Modifier</a> "));
            @Html.Raw(String.Format("<a class=\"editModal btn btn-danger fa fa-trash\" href=" + @Url.Action("DeleteModal", Model.typeObjet, new {id= Model.lesLignes[j][nbColonne] }) + "> Supprimer</a>"));        
            @Html.Raw("</td>");
        }

        @Html.Raw("</tr>");

    }

   
    </tbody>
</table>